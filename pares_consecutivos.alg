algoritmo "semnome"
// Função :
// Autor :
// Data : 21/03/2021
// Seção de Declarações
var
x, soma : inteiro
inicio
escreval("Digite um numero inteiro:")
leia(x)
enquanto x <> 0 faca

   se x%2 <> 0 entao
      x <- x+1
   fimse

   soma <- 5*x+20
   escreval("SOMA= ",soma)
   escreval("Digite um numero inteiro:")
   leia(x)
fimenquanto

fimalgoritmo
